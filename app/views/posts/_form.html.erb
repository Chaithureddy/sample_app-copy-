<%= form_for @post, :html => { :class => "form-horizontal post" } do |f| %>

  <% if @post.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :address, :class => 'form-control' %>
    </div>
    <%=f.error_span(:address) %>
  </div>
  <div class="form-group">
    <%= f.label :dob, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :dob, :class => 'form-control' %>
    </div>
    <%=f.error_span(:dob) %>
  </div>
  <div class="form-group">
    <%= f.label :desire, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :desire, :class => 'form-control' %>
    </div>
    <%=f.error_span(:desire) %>
  </div>
  <div class="form-group">
    <%= f.label :interests, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :interests, :class => 'form-control' %>
    </div>
    <%=f.error_span(:interests) %>
  </div>
  <div class="form-group">
    <%= f.label :hobby, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :hobby, :class => 'form-control' %>
    </div>
    <%=f.error_span(:hobby) %>
  </div>
  <div class="form-group">
    <%= f.label :signature, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :signature, :class => 'form-control' %>
    </div>
    <%=f.error_span(:signature) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn red-sunglo' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
